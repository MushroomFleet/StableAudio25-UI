{
  "name": "sa25-desktop",
  "version": "1.0.0",
  "description": "Stability Audio 2.5 Desktop Application",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "electron . --dev",
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build:all && electron-builder",
    "build:all": "cd ../client && npm run build && cd ../SA25-desktop && npm run copy:dist",
    "copy:dist": "node scripts/copy-dist.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.stability.sa25desktop",
    "productName": "Stability Audio 2.5",
    "directories": {
      "output": "build"
    },
    "files": [
      "electron/",
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "electron/server",
        "to": "server"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.icns",
      "category": "public.app-category.music"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icon.png",
      "category": "AudioVideo"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "find-free-port": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "fs-extra": "^11.2.0"
  },
  "author": "Stability AI",
  "license": "MIT"
}
